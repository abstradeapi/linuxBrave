{
  "name": "Brave Browser Codespace",
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu",
  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "forwardPorts": [
    3000,
    3001
  ],
  "postCreateCommand": "echo 'Docker ready, building environment...'",
  "postStartCommand": "docker run --rm -d --name brave -p 3000:3000 -p 3001:3001 --shm-size=1gb lscr.io/linuxserver/brave:latest"
}
